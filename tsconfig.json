{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strictNullChecks": false,
    "paths": {
      "@store": ["store.ts"],
      "@actions/*": ["actions/*"],
      "@actions": ["actions"],
      "@api/*": ["api/*"],
      "@api": ["api"],
      "@components/*": ["components/*"],
      "@components": ["components"],
      "@models/*": ["models/*"],
      "@models": ["models"],
      "@reducers/*": ["reducers/*"],
      "@reducers": ["reducers"],
    },
    "baseUrl": "src"
  },
  "include": [
    "src"
  ]
}